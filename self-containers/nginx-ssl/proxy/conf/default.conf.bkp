
# default
server {
    listen 80 default_server;
    index index.html index.htm index.php index.js index.py;
    server_name _;
    root /var/www/html;

    charset UTF-8;

    error_page 404 /backend-not-found.html;
        location = /backend-not-found.html {
        allow all;
    }

    location / {
        return 404;
    }

    access_log off;
    log_not_found off;
    error_log /var/log/nginx/error.log error;
}

# app1
server {
    listen 80;
    listen 443 ssl http2;
    server_name app1.servername.test;
    index index.html index.htm index.php index.js index.py;

    # Path for SSL config/key/certificate
    ssl_certificate /etc/ssl/certs/nginx/app1.crt;
    ssl_certificate_key /etc/ssl/certs/nginx/app1.key;
    include /etc/nginx/includes/ssl.conf;

    location / {
        include /etc/nginx/includes/proxy.conf;
        #proxy_pass http://app1.sample.local;
        proxy_pass http://192.168.15.13:38081;
        proxy_redirect http://192.168.15.13:38081 http://$server_name;
    }

    access_log off;
    error_log /var/log/nginx/app1-error.log error;
}


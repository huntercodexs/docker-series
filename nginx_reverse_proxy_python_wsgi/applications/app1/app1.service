[Unit]
Description=Gunicorn instance to serve App1
After=network.target

[Service]
User=jereelton
Group=jereelton
WorkingDirectory=/home/python3/applications/app1
Environment="PATH=/home/python3/applications/app1/app1env/bin"
ExecStart=/home/python3/applications/app1/app1env/bin/gunicorn --workers 3 --bind unix:app1.sock -m 007 wsgi:app

[Install]
WantedBy=multi-user.target
